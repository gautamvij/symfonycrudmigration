{% extends 'base.html.twig' %}
{% block body %}
	

	<table class="table">
	  <thead class="thead-inverse">
	    <tr>
	      <th>#</th>
	      <th>Todo</th>
	      <th>Due Date</th>
	      <th>Action</th>
	    </tr>
	  </thead>
	  <tbody>
	  {% for todo in todos %}
	    <tr>
	      <th scope="row">{{todo.id}}</th>
	      <td>{{todo.name}}</td>
	      <td>{{todo.dueDate|date('Y-m-d')}}</td>
	      <td>
	      	<a href="/todos/details/{{todo.id}}" class = "btn btn-success"> View </a>
	      	<a href="/todos/edit/{{todo.id}}" class = "btn btn-success"> Edit </a>
	      	<a href="/todos/delete/{{todo.id}}" class = "btn btn-danger"> delete </a>
	      </td>
	    </tr>
	   {% endfor  %} 
	  </tbody>
	</table>



{% endblock %}